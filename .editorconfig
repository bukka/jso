# https://editorconfig.org/

root = true

[*]
trim_trailing_whitespace = true
insert_final_newline     = true
end_of_line              = lf
charset                  = utf-8
tab_width                = 4
max_line_length          = 100

[{*.{awk,bat,c,cpp,d,dasc,h,l,re,skl,w32,y},Makefile*}]
indent_size              = 4
indent_style             = tab

[*.{ac,m4,sh,yml}]
indent_size              = 2
indent_style             = space

[*.md]
indent_style             = space

[COMMIT_EDITMSG]
indent_size              = 4
indent_style             = space

[*.patch]
trim_trailing_whitespace = false
